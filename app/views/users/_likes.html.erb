<% if likes.any? %>
  <ul class="list-unstyled">
    <% likes.each do |like| %>
      <li class="media">
      <img class="mr-2 rounded" src="<%= gravatar_url(like.user, { size: 50 }) %>" alt="">
        <div class="media-body">
                <div>    
                    <%= link_to like.user.name, user_path(like.user) %> <span class="text-muted">posted at <%= like.created_at %></span>
          </div>
          <div>
            <%= like.content %>
          </div>
          <div>

          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate likes %>
<% end %>